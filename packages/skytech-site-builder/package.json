{
  "name": "skytech-site-builder",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "homepage": "./",
  "build": {
    "appId": "com.skytech.site.builder.app",
    "includeSubNodeModules": "true",
    "directories": {
      "output": "dist"
    },
    "extraFiles": [
      "./dist/assets/**"
    ],
    "files": [
      "./dist/**/*",
      "./dist-electron/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./icons/skytech-site-builder.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "./icons/skytech-site-builder.ico",
      "uninstallerIcon": "./icons/skytech-site-builder.ico",
      "uninstallDisplayName": "skytech-site-builder-uninstaller",
      "license": "../../LICENSE.MD",
      "allowToChangeInstallationDirectory": false
    },
    "publish": {
      "provider": "github",
      "repo": "skytech-site-builder",
      "owner": "Carlos Santiago"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.14.16",
    "html-format": "^1.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-notifications": "^1.7.4",
    "react-router-dom": "^6.16.0",
    "react-toastify": "^9.1.3",
    "skytech-web-components": "^1.0.28",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-helmet": "^6.1.8",
    "@types/uglify-js": "^3.17.3",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitejs/plugin-react": "^4.0.4",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.48.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-electron": "^0.14.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
}
